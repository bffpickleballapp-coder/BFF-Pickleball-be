model Sessions {
  id              Int      @id @default(autoincrement())
  hostId          String   @map("host_id") @db.VarChar(36)
  clubId          Int      @map("club_id")
  venueId         Int      @map("venue_id")
  title           String?  @db.VarChar(200)
  description     String?  @db.Text
  startTime       DateTime @map("start_time")
  endTime         DateTime @map("end_time")
  maxPlayers      Int?     @map("max_players")
  priceMember     Decimal? @map("price_member") @db.Decimal(18, 2)
  priceOutsider   Decimal? @map("price_outsider") @db.Decimal(18, 2)
  imageUrl        String?  @map("image_url")
  status          String?  @db.VarChar(50)
  note            String?  @db.Text
  surchargeAmount Decimal? @map("surcharge_amount") @db.Decimal(12, 2)
  isPublic        Boolean? @default(true) @map("is_public")
  options         Json?    @db.JsonB

  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime? @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  host  Users  @relation("session_host", fields: [hostId], references: [id])
  club  Clubs  @relation("club_session", fields: [clubId], references: [id])
  venue Venues @relation("venue_session", fields: [venueId], references: [id])

  players  SessionPlayers[]
  matches  Matches[]
  payments Payments[]

  @@index([startTime])
  @@map("sessions")
}
