model Payments {
  id               Int      @id @default(autoincrement())
  userId           String   @map("user_id") @db.VarChar(36)
  sessionId        Int?     @map("session_id")
  membershipPlanId Int?     @map("membership_plan_id")
  amount           Decimal? @db.Decimal(12, 2)
  paymentMethod    String?  @map("payment_method") @db.VarChar(50)
  paymentType      String?  @map("payment_type") @db.VarChar(50)
  status           String?  @db.VarChar(50)
  transferId       String?  @unique @map("transfer_id") @db.VarChar(50)
  thirdPartyName   String?  @map("third_party_name") @db.VarChar(50)

  createdAt DateTime  @default(now()) @map("created_at")
  paidAt    DateTime? @map("paid_at")
  updatedAt DateTime? @updatedAt @map("updated_at")

  user           Users            @relation(fields: [userId], references: [id])
  session        Sessions?        @relation(fields: [sessionId], references: [id])
  membershipPlan MembershipPlans? @relation(fields: [membershipPlanId], references: [id])

  @@map("payments")
}
