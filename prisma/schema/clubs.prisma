model Clubs {
  id           Int      @id @default(autoincrement())
  name         String   @db.VarChar(200)
  ownerId      String   @map("owner_id") @db.VarChar(36)
  description  String?  @db.Text
  provinceCode String   @map("province_code")
  wardCode     String   @map("ward_code")
  imageUrl     String?  @map("image_url")
  totalMembers Int      @default(1) @map("total_members")
  isPublic     Boolean? @default(true) @map("is_public")

  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime? @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  owner           Users             @relation("club_owner", fields: [ownerId], references: [id])
  members         ClubMembers[]
  membershipPlans MembershipPlans[]
  sessions        Sessions[]        @relation("club_session")
  clubStatistics  ClubStatistics[]

  @@map("clubs")
}
